@{
    ViewData["Title"] = "API Definitions";
}

@section Scripts {

    <!-- Models required for this page -->
    <script src="~/js/models/common.js"></script>
    <script src="~/js/models/apidefinitions.js"></script>

    <!-- Vue script for this page-->
    <script src="~/js/pages/apidefinitions/index.js"></script>
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">Components</li>
    <li class="breadcrumb-item active">APIs</li>
</ol>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                Existing APIs
            </div>
            <div class="card-body">
                <ul class="list-inline">
                    <li class="list-inline-item" v-for="item in apiDefinitions">
                        <i class="fas fa-fw fa-book-open"></i>
                        <a v-bind:href="'/apidefinitions/' + item.id">{{item.name}}</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                API Editor
            </div>
            <div class="card-body">
            </div>
        </div>
    </div>
</div>

