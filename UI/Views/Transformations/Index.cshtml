@{
    ViewData["Title"] = "Transformations";
}

@section Scripts {

    <!-- Models required for this page -->
    <script src="~/js/models/common.js"></script>
    <script src="~/js/models/transformations.js"></script>

    <!-- Vue script for this page-->
    <script src="~/js/pages/transformations/index.js"></script>
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">Components</li>
    <li class="breadcrumb-item active">Transformations</li>
</ol>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-lg-10">
                        <div class="form-group">
                            <!-- The Search Criteria -->
                            <input type="text" class="form-control" id="searchCriteria" name="searchCriteria" v-model="page.searchCriteria" />
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            <!-- "New" button -->
                            <input type="button" class="btn" id="new" name="new" value="+" v-on:click="newTransformation" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <ul class="list-inline">
                    <!-- List of transformations -->
                    <li class="list-group-item" v-for="item in filteredTransformations">
                        <!-- Edit the transformation in the list -->
                        <a v-on:click="edit(item)" href="#">{{item.name}}</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#dataTransformationEditor">Transformation Editor</a>
