@{
    ViewData["Title"] = "Home Page";
}

@section Scripts
    {
    <!-- Models required for this page -->
    <script src="~/js/models/dataitems.js"></script>

    <!-- Vue script for this page-->
    <script src="~/js/pages/test.js"></script>
}

<div class="row">
    <div class="col-md-12">
        <div id="test">
            <button class="btn" v-on:click="loadDefinition" style="margin-top: 50px">Load Definition</button>
            <button class="btn" v-on:click="loadData" style="margin-top: 50px">Load Data</button>
            <button class="btn" v-on:click="add" style="margin-top: 50px">Add Property</button>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th v-for="item in definition.itemProperties">
                            {{ item.name }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="line in values.lines">
                        <td v-for="item in definition.itemProperties">
                            {{ line[item.name] }}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</div>
