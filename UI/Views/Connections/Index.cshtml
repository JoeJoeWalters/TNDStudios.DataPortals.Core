@{
    ViewData["Title"] = "Connectors";
}

@section Scripts {

    <!-- Models required for this page -->
    <script src="~/js/models/common.js"></script>
    <script src="~/js/models/dataconnections.js"></script>

    <!-- Vue script for this page-->
    <script src="~/js/pages/connections/index.js"></script>
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">Components</li>
    <li class="breadcrumb-item active">Connections</li>
</ol>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <!--
                <div class="row">
                    <div class="col-lg-12">
                        Existing Connections
                    </div>
                </div>
                    -->
                <div class="row">
                    <div class="col-lg-10">
                        <div class="form-group">
                            <!-- The Search Criteria -->
                            <input type="text" class="form-control" id="searchCriteria" name="searchCriteria" v-model="page.searchCriteria" />
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            <!-- "New" button -->
                            <input type="button" class="btn" id="new" name="new" value="+" v-on:click="newConnection" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <!-- List of connections -->
                    <li class="list-group-item" v-for="item in filteredConnections">
                        <!-- Edit the connection in the list -->
                        <a v-on:click="edit(item)" href="#">{{item.name}}</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                Connection Editor
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label for="id">Id</label>
                            <!-- The Id of the connection -->
                            <input type="text" class="form-control" readonly="readonly" id="id" name="id" v-model="page.editor.id" />
                        </div>
                        <div class="form-group">
                            <label for="name">Name</label>
                            <!-- The name of the connection -->
                            <input type="text" class="form-control" id="name" name="name" v-model="page.editor.name" />
                        </div>
                        <div class="form-group">
                            <label for="providerType">Type</label>
                            <!-- The type of connection -->
                            <select class="form-control" id="providerType" name="providerType" v-model="page.editor.providerType">
                                <option v-bind:value="item.key" v-for="item in page.providerTypes">
                                    {{ item.value }}
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label for="description">Description</label>
                            <!-- Description of the connection -->
                            <textarea class="form-control" id="description" name="description" v-model="page.editor.description"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="connectionString">Connection String</label>
                            <!-- Connection String -->
                            <textarea class="form-control" id="connectionString" name="connectionString" v-model="page.editor.connectionString"></textarea>
                        </div>
                        <div class="form-group">
                            <label>
                                Data Definitions
                                <b>(Put on different tab!!!)</b>
                            </label>
                            <!-- Attached Definitions -->
                            <ul class="list-inline">
                                <li class="list-inline-item" v-for="item in page.editor.definitions">
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <input v-on:click="save()" type="button" style="margin-left: 0.1em; margin-right: 0.1em" class="btn btn-primary float-right" id="save" name="save" value="Save" />
                        <input v-on:click="test(page.connection)" type="button" style="margin-left: 0.1em; margin-right: 0.1em" class="btn btn-info float-right" id="test" name="test" value="Test" />
                        <b>(Buttons need validation etc. Test should go to a service!!!)</b>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
