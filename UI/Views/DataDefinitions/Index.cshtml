@{
    ViewData["Title"] = "Data Definitions";
}

@section Scripts {

    <!-- Models required for this page -->
    <script src="~/js/models/common.js"></script>
    <script src="~/js/models/datadefinitions.js"></script>

    <!-- Vue script for this page-->
    <script src="~/js/pages/datadefinitions/index.js"></script>
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">Components</li>
    <li class="breadcrumb-item active">Data Definitions</li>
</ol>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-lg-10">
                        <div class="form-group">
                            <!-- The Search Criteria -->
                            <input type="text" class="form-control" id="searchCriteria" name="searchCriteria" v-model="page.searchCriteria" />
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            <!-- "New" button -->
                            <input type="button" class="btn" id="new" name="new" value="+" v-on:click="newDataDefinition" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <ul class="list-inline">
                    <!-- List of definitions -->
                    <li class="list-inline-item" v-for="item in filteredDataDefinitions">
                        <!-- Edit the definition in the list -->
                        <a v-on:click="edit(item)" href="#">{{item.name}}</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#dataDefinitionEditor">Data Definition Editor</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#linkedComponents" v-bind:style="{visibility: isSavedVisible}">Linked Components</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane container active" id="dataDefinitionEditor">
                <form id="editorForm">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="form-group">
                                <label for="id">Id</label>
                                <!-- The Id of the definition -->
                                <input type="text" class="form-control" readonly="readonly" id="id" name="id" v-model="page.editor.id" />
                            </div>
                            <div class="form-group">
                                <label for="name">Name <span class="required">*</span></label>
                                <!-- The name of the definition -->
                                <input type="text" class="form-control" id="name" name="name" v-model="page.editor.name" />
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="form-group">
                                <label for="description">Description</label>
                                <!-- Description of the data definition -->
                                <textarea class="form-control" id="description" name="description" v-model="page.editor.description"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <span v-bind:style="{visibility: isSavedVisible}">
                                <input v-on:click="deleteDataDefinition()" type="button" class="btn btn-danger" value="Delete" />
                            </span>
                            <input v-on:click="saveDataDefinition()" type="button" style="margin-left: 0.1em; margin-right: 0.1em" class="btn btn-primary float-right" id="save" name="save" value="Save" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="tab-pane container" id="linkedComponents">

            </div>
        </div>

    </div>
</div>

